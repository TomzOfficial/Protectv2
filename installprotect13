#!/bin/bash
set -euo pipefail

EGG_PATH="/var/www/pterodactyl/app/Http/Controllers/Admin/Nests/EggController.php"
TIMESTAMP=$(date -u +"%Y-%m-%d-%H-%M-%S")
EGG_BACKUP="${EGG_PATH}.bak_${TIMESTAMP}"

echo "ğŸš€ Memasang proteksi Admin Only untuk halaman Egg (view)..."

# Backup file lama
if [ -f "$EGG_PATH" ]; then
  mv "$EGG_PATH" "$EGG_BACKUP"
  echo "ğŸ“¦ Backup EggController lama: $EGG_BACKUP"
else
  echo "â„¹ï¸ File EggController lama tidak ditemukan, membuat baru: $EGG_PATH"
fi

# Pastikan direktori ada
mkdir -p "$(dirname "$EGG_PATH")"
chmod 755 "$(dirname "$EGG_PATH")"

# Tulis file baru dengan proteksi di view() saja
cat > "$EGG_PATH" << 'EOF'
<?php

namespace Pterodactyl\Http\Controllers\Admin\Nests;

use Illuminate\View\View;
use Pterodactyl\Models\Egg;
use Illuminate\Http\RedirectResponse;
use Prologue\Alerts\AlertsMessageBag;
use Illuminate\View\Factory as ViewFactory;
use Pterodactyl\Http\Controllers\Controller;
use Pterodactyl\Services\Eggs\EggUpdateService;
use Pterodactyl\Services\Eggs\EggCreationService;
use Pterodactyl\Services\Eggs\EggDeletionService;
use Pterodactyl\Http\Requests\Admin\Egg\EggFormRequest;
use Pterodactyl\Contracts\Repository\EggRepositoryInterface;
use Pterodactyl\Contracts\Repository\NestRepositoryInterface;
use Illuminate\Support\Facades\Auth;

class EggController extends Controller
{
    public function __construct(
        protected AlertsMessageBag $alert,
        protected EggCreationService $creationService,
        protected EggDeletionService $deletionService,
        protected EggRepositoryInterface $repository,
        protected EggUpdateService $updateService,
        protected NestRepositoryInterface $nestRepository,
        protected ViewFactory $view
    ) {}

    public function view(Egg $egg): View
    {
        $user = Auth::user();
        if (!$user || $user->id !== 1) {
            abort(403, 'ğŸš« Halaman Egg ini hanya bisa dibuka oleh Admin Utama.');
        }

        return $this->view->make('admin.eggs.view', [
            'egg' => $egg,
            'images' => array_map(
                fn ($key, $value) => $key === $value ? $value : "$key|$value",
                array_keys($egg->docker_images),
                $egg->docker_images,
            ),
        ]);
    }
}
EOF

chmod 644 "$EGG_PATH"

echo "âœ… Proteksi halaman Egg (view) berhasil dipasang!"
echo "ğŸ“‚ Lokasi file: $EGG_PATH"
if [ -f "$EGG_BACKUP" ]; then
  echo "ğŸ—‚ï¸ Backup file lama: $EGG_BACKUP"
fi
